{
    "manifest_version": 3,
    "name": "Handy notes",
    "description": "Take quick notes without leaving the browser.",
    "version": "1.0",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/note16.png",
        "48": "icons/note48.png",
        "128": "icons/note128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/note16.png",
      "48": "icons/note48.png",
      "128": "icons/note128.png"
    }
  }
  